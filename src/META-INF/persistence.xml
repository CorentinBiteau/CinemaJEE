<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cinema">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>metier.Acteur</class>
		<class>metier.Categorie</class>
		<class>metier.Film</class>
		<class>metier.Personnage</class>
		<class>metier.PersonnagePK</class>
		<class>metier.Realisateur</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cinema" />
			<property name="javax.persistence.jdbc.user" value="userepul" />
			<property name="javax.persistence.jdbc.password" value="epul" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
